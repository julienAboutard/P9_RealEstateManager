<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/media_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

    <ImageView
        android:id="@+id/media_type_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="@id/media_iv"
        app:layout_constraintTop_toTopOf="@id/media_iv"
        tools:src="@drawable/outline_photo_camera_24"
        android:background="@drawable/media_type_round_background"/>

    <TextView
        android:id="@+id/media_title_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/media_type_sqare_background"
        tools:text="Front_yard"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/media_iv"
        app:layout_constraintStart_toStartOf="@id/media_iv"
        app:layout_constraintEnd_toEndOf="@id/media_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>